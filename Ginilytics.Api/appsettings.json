{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "NLog": {
      "IncludeScopes": true
    }
  },
  "CorsSettings": {
    "ProdClientAppUrl": [ "https://localhost:3000", "http://localhost:3000" ],
    "DefaultPolicyName": "AllowSpecificOrigin"
  },
 
  "ConnectionString": "Persist Security Info=False;Data Source=printer;Initial Catalog=GiniLyticsStandard;User ID=developer;Password=Y#@r20careful!;Packet Size=4096;Connect Timeout=100",
  "AllowedHosts": "*",
  "AppSettings": {
    "JWTSecret": "\"kTiZ'(<8+[(9<kP`/?M?jW1gzt#%|B/n9u6lQAg%'z|0JAm#uVN5*4u\\r\\)=YCd",
    "TokenExpiryTime": 3600, //Time in seconds. 3600 sec = 1 hours
    "RefreshTokenExpiryTime": 36000, //Time in seconds. 36000 sec = 10 hours
    //"Issuer": "https://localhost:44309/",
    //"Audience": "https://localhost:44309/",
    "HashIterationCount": 1000,
    "ForgotPasswordTokenValidationTime": 86400,
    "CoinRepeatedHours": 24
  },

  "NLog": {
    "internalLogLevel": "Info",
    "internalLogFile": "${basedir}/Logs/InternalLog/internalLog.log",
    "Extensions": {
      "NLog.Extensions.Logging": {
        "assembly": "NLog.Web.AspNetCore"
      }
    },
    "targets": {
      "async": true,
      "all-file": {
        "type": "File",
        "fileName": "${basedir}/Logs/${shortdate}.log",
        "layout": {
          "type": "JsonLayout",
          "Attributes": [
            {
              "name": "timestamp",
              "layout": "${date:format=o}"
            },
            {
              "name": "level",
              "layout": "${level}"
            },
            {
              "name": "logger",
              "layout": "${logger}"
            },
            {
              "name": "message",
              "layout": "${message:raw=true}"
            },
            {
              "name": "properties",
              "encode": false,
              "layout": {
                "type": "JsonLayout",
                "includeallproperties": "true"
              }
            }
          ]
        }
      },
      "database": {
        "type": "Database",
        "dbProvider": "System.Data.SqlClient",
        "connectionString": "Persist Security Info=False;Data Source=printer;Initial Catalog=GiniLyticsStandard;User ID=developer;Password=Y#@r20careful!;Packet Size=4096;Connect Timeout=100",
        "keepConnection": "true",
        "commandText": "INSERT INTO [logger].[tbl_logs](utcTimeStamp,level,message,logger,callsite,exception) VALUES (@utcTimeStamp, @level, @message, @logger, @callsite, @exception)",
        "parameters": [
          {
            "name": "@utcTimeStamp",
            "layout": "${date:universalTime=true:format=o}",
            "dbType": "DbType.DateTime"
          },
          {
            "name": "@level",
            "layout": "${level}"
          },
          {
            "name": "@message",
            "layout": "${message}"
          },
          {
            "name": "@logger",
            "layout": "${logger}"
          },
          {
            "name": "@callsite",
            "layout": "${callsite}"
          },
          {
            "name": "@exception",
            "layout": "${exception:tostring}"
          }
        ]

      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "all-file"
      },
      {
        "logger": "Microsoft.*",
        "maxLevel": "Info",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "database"
      }
    ]
  }
}
